{
  "name": "gomcp",
  "version": "0.13.0",
  "type": "module",
  "description": "ðŸš€ The easiest way to supercharge Claude Code with 30+ MCP servers - just run 'npx gomcp' and pick your tools!",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "gomcp": "dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/exports.d.ts",
      "import": "./dist/exports.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc && npm run copy:translations && chmod +x dist/index.js",
    "copy:translations": "mkdir -p dist/i18n && cp -r src/i18n/translations dist/i18n/",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "pre-pr": "./scripts/pre-pr.sh",
    "preversion": "npm test && npm run lint",
    "version": "npm run build && git add -f dist/",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "claude",
    "claude-code",
    "cli",
    "interactive",
    "model-context-protocol",
    "anthropic"
  ],
  "author": "coolwithyou",
  "license": "MIT",
  "homepage": "https://github.com/coolwithyou/gomcp#readme",
  "bugs": {
    "url": "https://github.com/coolwithyou/gomcp/issues"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "commander": "^11.1.0",
    "execa": "^8.0.1",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "strip-ansi": "^7.1.0"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md",
    "README.*.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coolwithyou/gomcp.git"
  }
}
